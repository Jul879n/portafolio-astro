---
import {rutas} from "../data/rutas";
import ButtonMenu from "./ui/Buttons/ButtonMenu.astro";
interface Props {
    titulo: string;
}
const {titulo} = Astro.props;
---
<header class='px-3  w-full sm:w-7/12 sm:mx-auto container flex justify-end items-center my-2'>
    <nav class='flex items-center gap-1'>
        {rutas.map(({href, text}) => (
            titulo.toLowerCase() === text.toLowerCase() ? <ButtonMenu active={true} href={href}>{text}</ButtonMenu> : <ButtonMenu active={false} href={href}>{text}</ButtonMenu>
        ))}
    </nav>
</header>