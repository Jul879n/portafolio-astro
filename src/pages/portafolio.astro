---
import Layout from "../layouts/Layout.astro";
import {infoSitios, rutaImg} from "../data/infoSitios";
import Card from "../components/ui/Card.astro";
---

<Layout title="Portafolio" description='Estos son los sitios web hechos por JuliÃ¡n Araya'>
<div class='grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 gap-2'>
    {infoSitios.map((data)=>(
        <Card adicionalClass='relative'>
            <img class='object-cover rounded-xl h-full' src=`${rutaImg}/${data.jpg}` alt={data.title}/>
            <a href={data.path} class='transition opacity-0 hover:opacity-100 z-10 absolute top-0 left-0 w-full h-full'>
                <div class='p-2 w-full h-full rounded-xl backdrop-blur-xl bg-black/60 flex flex-col items-center justify-center'>
                    <span class='text-2xl  sm:text-4xl text-center capitalize'>{data.title}</span>
                </div>
            </a>
        </Card>
    ))}
</div>
</Layout>
