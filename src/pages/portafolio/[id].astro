---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/ui/Card.astro";
import {infoSitios, rutaImg} from "../../data/infoSitios";
import ImageRounded from "../../components/ui/ImageRounded.astro";
import NoExiste from "../../components/ui/NoExiste.astro";
export function getStaticPaths() {
    return [
        {params: {id: '22'}},
        {params: {id: '23'}},
        {params: {id: '24'}},
    ];
}

const {id} = Astro.params;
---
<Layout title='Portafolio'>
    <Card adicionalClass=''>
        {infoSitios.filter((data) => data.id == id).length > 0 ?
            infoSitios.filter((data) => data.id == id).map(data => (
                    <ImageRounded src={`${rutaImg}/${data.jpg}`}
                                  alt={data.title}/>
                    <h1 class='mt-3 text-left'>{data.title}</h1>
                    <p>{data.paragraph}</p>
                    <a class='px-2 py-1 bg-rose-300 hover:bg-rose-500 text-black transition rounded-full capitalize' href={data.url} target='_blank'>visitar</a>
                    <h2>caracteristicas</h2>
                    <ul class='list-disc list-inside'>
                        {data.list.map(list=>
                                <li>{list}</li>
                        )}
                    </ul>
            ))
            :
                <NoExiste/>
        }
    </Card>
</Layout>