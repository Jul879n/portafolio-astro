---
import Menu from "../components/Menu.astro";
import Footer from "../components/ui/Footer.astro";
interface Props {
    title: string;
    description: string;
}

const {title, description} = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <!-- Google tag (gtag.js) -->
        <script
            is:inline
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-GPE3GM5DJM"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-GPE3GM5DJM");
        </script>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script
            is:inline
            src="https://kit.fontawesome.com/7faa747298.js"
            crossorigin="anonymous"></script>
    </head>
    <body>
        <Menu titulo={title ? title : ""} />
        <main
            class="lg:w-7/12 md:w-12/12 sm:w-10/12 w-full sm:mx-auto px-3 my-2"
        >
            <slot />
        </main>
        <Footer />
        <style is:global>
            html {
                @apply text-rose-200 bg-slate-950;
            }
            h1 {
                @apply text-center break-words font-bold text-4xl sm:text-7xl text-rose-200 uppercase;
            }
            h2 {
                @apply text-3xl sm:text-4xl font-bold capitalize w-max;
            }
            h3 {
                @apply capitalize text-rose-400 text-2xl sm:text-3xl font-semibold;
            }
        </style>
    </body>
</html>
